<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/li0"
android:overScrollMode="always"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#23565656"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tx0"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="Повторите попытку через PIN-код SIM-карты" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号:XT20201011AE86" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡检时间：60分钟" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点:西北旺东路10号院网易大厦" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="说明：上班高峰期共享单车占道停放" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/li1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号:XT202010110086" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡检时间：30分钟" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点:上地十街百度大厦" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="说明：汽车违规停车" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/li2"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号:XT20201011A186" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡检时间：45分钟" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点:西北旺东路10号软通动力总部大楼" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="说明：例行设备检查" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"></ImageView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/ll3"
        android:background="#23565656"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/widget_top1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="6dip"
            android:scaleType="centerInside"
            android:src="@drawable/liebiao" />

        <ImageView
            android:id="@+id/widget_top2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="6dip"
            android:scaleType="centerInside"
            android:src="@drawable/tianjia" />

        <ImageView
            android:id="@+id/widget_top3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="6dip"
            android:scaleType="centerInside"
            android:src="@drawable/renwu" />

        <ImageView
            android:id="@+id/widget_top4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:padding="6dip"
            android:scaleType="centerInside"
            android:src="@drawable/shezhi" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:background="#23565656"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:paddingStart="6dip"
            android:text="同步任务"
            android:textColor="#aaa"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="添加事件"
            android:textColor="#aaa"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="查看事件"
            android:textColor="#aaa"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="设置中心"
            android:textColor="#aaa"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>